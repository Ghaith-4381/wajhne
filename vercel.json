{
    "version": 2,
    "builds": [
      {
        "src": "dist/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "server.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "server/**/*",
            "public/**/*"
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/health",
        "dest": "/server.js"
      },
      {
        "src": "/api/admin-4Bxr7Xt89/(.*)",
        "dest": "/server.js"
      },
      {
        "src": "/api/(.*)",
        "dest": "/server.js"
      },
      {
        "src": "/uploads/(.*)",
        "dest": "/public/uploads/$1"
      },
      {
        "src": "/sounds/(.*)",
        "dest": "/public/sounds/$1"
      },
      {
        "src": "/admin-4Bxr7Xt89-secure",
        "dest": "/dist/index.html"
      },
      {
        "src": "/admin-4Bxr7Xt89-secure/(.*)",
        "dest": "/dist/index.html"
      },
      {
        "src": "/(.*)",
        "dest": "/dist/index.html"
      }
    ],
    "functions": {
      "server.js": {
        "maxDuration": 30,
        "memory": 1024
      }
    },
    "env": {
      "NODE_ENV": "production"
    },
    "rewrites": [
      {
        "source": "/admin-4Bxr7Xt89-secure/:path*",
        "destination": "/dist/index.html"
      }
    ]
  }
  